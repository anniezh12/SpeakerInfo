
<table class ="noBorder">
    <%= form_for @user do |f|%>

          <tr><td class ="noBorder">name: </td><td class ="noBorder"><%= f.text_field :name%></td></tr>
          <tr><td class ="noBorder">Education:</td><td class ="noBorder"> <%= f.text_field :education%></td></tr>
          <tr><td class ="noBorder">Biography: </td><td class ="noBorder"><%= f.text_field :biography%></td></tr>
          <tr><td class ="noBorder">Web site: </td><td class ="noBorder"><%= f.text_field :website%></td></tr>
          <tr><td class ="noBorder">Speaker Category: </td><td class ="noBorder"><%= f.collection_select(:category_id, Category.all,:id,:title,{prompt: "Please Select A Category "})%></td></tr>

<br><%#=binding.pry%>
            <tr><td>Or add a new Category </td></tr>
            <!-- in the fields_for if a new Category is not created (Category.new) these fields will noyt appear-->
            <%= f.fields_for :category, Category.new do |category_fields| %>
                  <tr><td class ="noBorder">Title: </td><td class ="noBorder"></label><%= category_fields.text_field :title %></td></tr>
                   <tr><td class ="noBorder">Description:</td><td class ="noBorder"><%= category_fields.text_field :description %></td></tr>
                   <tr><td class ="noBorder">Prime Category: </td><td class ="noBorder"><%= category_fields.text_field :prime_category  %></td></tr>
            <% end %>
          </td></tr>
          <tr><td class ="noBorder"></td><td class ="noBorder"><%= f.submit "Create Profile"%></td></tr>

    <%end%>
</table>
